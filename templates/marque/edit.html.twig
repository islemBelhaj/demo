{% extends 'base_admin_back.html.twig' %}

{% block title %}Edit Marque{% endblock %}

{% block body %}
    <h1>Edit Marque</h1>
    {{ form_start(form) }}
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">{{ form_label(form.marque) }} <span class="text-danger">*</span></label>
        <div class="col-lg-6">
            {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.marque) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">{{ form_label(form.model) }} <span class="text-danger">*</span></label>
        <div class="col-lg-6">
            {{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.model) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-8 ml-auto">
            <button type="submit" class="btn btn-primary">{{ button_label|default('update') }}</button>
        </div>
    </div>
{{ form_end(form) }}
    <a href="{{ path('app_marque_index') }}" class="btn btn-primary">back to list</a>

    {{ include('marque/_delete_form.html.twig') }}
{% endblock %}
