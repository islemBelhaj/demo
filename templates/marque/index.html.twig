{% extends 'base_admin_back.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
    <h1 style="text-align: center">Marque</h1>

    <table class="table">
        <thead>
            <tr>
                <th style="color: red">Id</th>
                <th style="color: red">Marque</th>
                <th style="color: red">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.id }}</td>
                <td>{{ marque.marque }}</td>
                <td>
                    <a href="{{ path('app_marque_show', {'id': marque.id}) }}" class="btn btn-warning">show</a>
                    <a href="{{ path('app_marque_edit', {'id': marque.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_marque_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
